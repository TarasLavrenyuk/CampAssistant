<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/children_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/children_list_item_kid_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user_avatar" />

    <TextView
        android:id="@+id/children_list_item_kid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/children_list_item_kid_avatar"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Taras Lavreniuk"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/children_list_item_kid_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/children_list_item_kid_name"
        android:layout_alignStart="@id/children_list_item_kid_name"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Room 7"
        android:textSize="14sp" />

</RelativeLayout>
