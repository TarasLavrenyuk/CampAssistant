<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".pupil.SortPupilsDialog">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:corner_radius="@dimen/dialog_corner_radius">

        <TextView
            android:id="@+id/dialog_srt_pupils_sort_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/ui_sort_by"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="@dimen/default_textsize"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_srt_pupils_sort_by_label"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/dialog_srt_pupils_radio_button_sort_by_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorBlue"
                android:text="last name" />

            <RadioButton
                android:id="@+id/dialog_srt_pupils_radio_button_sort_by_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_srt_pupils_radio_button_sort_by_lname"
                android:buttonTint="@color/colorBlue"
                android:text="room" />

        </RelativeLayout>

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


</RelativeLayout>