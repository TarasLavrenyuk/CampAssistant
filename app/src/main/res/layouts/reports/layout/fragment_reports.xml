<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/reports_fragment_search_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:corner_radius="25dp">

            <SearchView
                android:id="@+id/reports_fragment_search_view"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="Search" />

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reports_fragment_report_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reports_fragment_search_view_layout"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp" />


    </RelativeLayout>
</ScrollView>
