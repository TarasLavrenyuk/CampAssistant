<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/user_info_list_item_margin_between_list_items"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:corner_radius="@dimen/user_info_list_item_corner_radius">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_info_list_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/user_info_list_item_padding_horizontal"
            android:textColorHint="@color/colorLightGrey"
            android:textStyle="normal"
            app:hintTextAppearance="@style/UserSetting.UserParams.Caption"
            app:hintTextColor="@color/colorLightGrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_info_list_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/user_info_list_item_padding_top"
                android:singleLine="true"
                android:textAppearance="@style/UserSetting.UserParams.Text"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
</LinearLayout>
