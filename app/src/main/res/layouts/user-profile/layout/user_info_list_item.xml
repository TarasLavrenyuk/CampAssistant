<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/user_info_list_item_margin_between_list_items"
    android:orientation="vertical">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:corner_radius="@dimen/user_info_list_item_corner_radius">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_info_list_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_plus"
            app:endIconContentDescription="Kakayato huinya"

            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            app:boxStrokeWidth="2dp"
            android:textColorHint="@color/colorLightGrey"
            android:textStyle="normal"
            app:hintTextAppearance="@style/UserSetting.UserParams.Caption"
            app:hintTextColor="@color/colorLightGrey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_info_list_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:singleLine="true"
                android:textAppearance="@style/UserSetting.UserParams.Text"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
</LinearLayout>
