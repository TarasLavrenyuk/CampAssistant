<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/squad_list_pupil_list_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:background="@color/colorWhite">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/squad_list_pupil_list_item_pupil_avatar"
        android:layout_width="@dimen/squad_list_pupil_list_item_size"
        android:layout_height="@dimen/squad_list_pupil_list_item_size"
        android:clickable="true"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/squad_list_pupil_list_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>
