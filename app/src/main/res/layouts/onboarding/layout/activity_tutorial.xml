<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onboarding_activity_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/onboarding_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/onboarding_activity_button_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/backgroundColor"
        android:clipToPadding="false"
        android:elevation="24dp">

        <TextView
            android:id="@+id/onboarding_activity_prev_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:color="@color/backgroundColor"
            android:fontFamily="@font/helvetica_rounded_bold"
            android:text="@string/ui_back"
            android:textColor="@color/colorDarkGrey" />


        <TextView
            android:id="@+id/onboarding_activity_next_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:color="@color/backgroundColor"
            android:fontFamily="@font/helvetica_rounded_bold"
            android:text="@string/ui_finish"
            android:textColor="@color/colorDarkGrey" />


        <LinearLayout
            android:id="@+id/onboarding_activity_indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" />

    </RelativeLayout>

</FrameLayout>
