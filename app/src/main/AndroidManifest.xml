<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lavreniuk.campassistant">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pupil.KidActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".squad.SquadActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".onboarding.OnboardingActivity" />
        <activity
            android:name=".pupil.RegistrationActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".user.UserSettingsActivity"
            android:label="@string/ui_settings"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustPan" />

        <!--  Dialogs  -->
        <activity
            android:name=".dialogs.EnterNameDialog"
            android:excludeFromRecents="true"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".pupil.CreateContactDialog"
            android:excludeFromRecents="true"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".pupil.SortPupilsDialog"
            android:excludeFromRecents="true"
            android:theme="@style/DialogTheme" />

    </application>


</manifest>